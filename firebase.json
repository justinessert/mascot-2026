{
    "functions": {
        "source": "functions",
        "predeploy": [
            "npm --prefix \"$RESOURCE_DIR\" run build"
        ]
    },
    "hosting": {
        "site": "mascot-bracket",
        "public": "dist",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}